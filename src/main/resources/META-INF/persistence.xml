  <persistence-unit name="flotaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.vendrellignacio.controlflotavehicular.logic.Acoplado</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Chasis</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Gasto</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Impuesto</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Mantenimiento</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Multa</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Neumatico</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Patente</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Seguro</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Tecnica</class>
    <class>com.vendrellignacio.controlflotavehicular.logic.Viaje</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:./data/miBD" />
      <!-- <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/controlFlotaVehicular?serverTimezone=UTC"/>-->
      <!-- antes iba "root"-->
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
      <!--<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>-->
      <property name="javax.persistence.jdbc.password" value=""/>
      <!--<property name="javax.persistence.schema-generation.database.action" value="create"/>-->
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
      <property name="hibernate.show_sql" value="true" />
      
    </properties>
  </persistence-unit>
</persistence>
